<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar1"
    style="@style/ToolbarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimens_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dimens_15"
            android:layout_height="@dimen/dimens_15"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/dimens_5"
            app:srcCompat="@drawable/ic_back" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dimens_20"
            android:layout_height="@dimen/dimens_20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimens_5"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_error_white" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimens_10"
            android:layout_marginEnd="@dimen/dimens_10"
            android:layout_toStartOf="@id/iv_close"
            android:layout_toEndOf="@id/iv_back"
            android:background="@color/colorWhite"
            android:fontFamily="@font/montserrat_semibold"
            android:hint="@string/search_for_job_id_name"
            android:padding="@dimen/dimens_8sp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlackOverlay"
            android:textSize="@dimen/dimens_12sp" />


    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>