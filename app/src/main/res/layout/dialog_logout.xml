<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimens_8">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/DialogTextView_Title"
            android:layout_margin="@dimen/dimens_15"
            android:gravity="center"
            android:text="Are you sure, want to logout?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_10"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_30"
                android:layout_marginEnd="@dimen/dimens_10"
                android:layout_weight="1"
                android:background="@drawable/btn_theme_bg"
                android:gravity="center"
                android:padding="@dimen/dimens_2"
                android:text="No"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_12sp"
                android:visibility="visible"
                app:fontFamily="@font/stolzl_regular" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_10"
                android:layout_marginEnd="@dimen/dimens_30"
                android:layout_weight="1"
                android:background="@drawable/btn_green_bg"
                android:fontFamily="@font/stolzl_regular"
                android:gravity="center"
                android:padding="@dimen/dimens_2"
                android:text="Yes"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_12sp" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>