<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_20"
        android:background="@drawable/bg_outline_curve"
        android:orientation="vertical"
        android:padding="@dimen/dimens_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/stolzl_medium"
                android:text="@string/job_type"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:id="@+id/tv_job_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:fontFamily="@font/stolzl_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/stolzl_medium"
                android:text="@string/job_id"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:id="@+id/tv_job_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/stolzl_regular"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_purifier_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/stolzl_medium"
                android:text="Purifier ID :"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_purifier_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/stolzl_regular"
                    android:textSize="@dimen/dimens_12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_service_report"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_30"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:background="@drawable/btn_background"
                    android:fontFamily="@font/stolzl_regular"
                    android:gravity="center"
                    android:text="Service Report"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dimens_12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/stolzl_medium"
                android:text="@string/customer_name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/stolzl_regular"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/stolzl_medium"
                android:text="@string/custphn"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_18"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:gravity="end"
                android:src="@drawable/ic_phone" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:fontFamily="@font/stolzl_regular"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alt_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/stolzl_medium"
                android:text="@string/alternate_no"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_18"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:gravity="end"
                android:src="@drawable/ic_phone" />

            <TextView
                android:id="@+id/tv_alt_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:fontFamily="@font/stolzl_regular"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/stolzl_medium"
                android:text="@string/address"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_20"
                android:layout_weight="0.4"
                android:gravity="end"
                android:src="@drawable/ic_location_black" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.8"
                android:fontFamily="@font/stolzl_regular"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/stolzl_medium"
                android:text="@string/appt_start_date"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:id="@+id/tv_appt_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/stolzl_regular"
                android:textSize="@dimen/dimens_12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/stolzl_medium"
                android:text="@string/appt_end_date"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:id="@+id/tv_appt_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/stolzl_regular"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginBottom="@dimen/dimens_5"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/stolzl_medium"
                android:text="@string/job_description"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:id="@+id/tv_job_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/stolzl_regular"
                android:textSize="@dimen/dimens_12sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_add_note"
            android:layout_width="@dimen/dimens_120"
            android:layout_height="@dimen/dimens_30"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimens_10"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/stolzl_regular"
            android:gravity="center"
            android:text="Add Note"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimens_12sp"
            android:visibility="visible" />

        <include
            android:id="@+id/layout_ins"
            layout="@layout/layout_type_installation"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_workflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimens_10"
            android:orientation="horizontal"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_select"
                android:layout_width="@dimen/dimens_120"
                android:layout_height="@dimen/dimens_30"
                android:layout_gravity="center"
                android:background="@drawable/btn_theme_bg"
                android:gravity="center"
                android:paddingStart="@dimen/dimens_15"
                android:paddingEnd="@dimen/dimens_15"
                android:text="@string/finish_job"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_12sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_start_job"
            android:layout_width="@dimen/dimens_120"
            android:layout_height="@dimen/dimens_30"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimens_10"
            android:background="@drawable/btn_theme_bg"
            android:fontFamily="@font/stolzl_regular"
            android:gravity="center"
            android:text="@string/start_job"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimens_12sp"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/finish_job"
            android:layout_width="@dimen/dimens_120"
            android:layout_height="@dimen/dimens_30"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimens_10"
            android:background="@drawable/btn_theme_bg"
            android:gravity="center"
            android:paddingStart="@dimen/dimens_15"
            android:paddingEnd="@dimen/dimens_15"
            android:text="@string/finish_job"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimens_12sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>