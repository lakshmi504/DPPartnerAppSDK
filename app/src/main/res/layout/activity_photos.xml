<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.photo.PhotosActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_capture"
        android:layout_marginTop="@dimen/dimens_20"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Upload Images"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dimens_14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_capture"
        android:layout_width="@dimen/dimens_120"
        android:layout_height="@dimen/dimens_40"
        android:layout_above="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimens_20"
        android:background="@drawable/btn_background"
        android:text="Capture Image"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dimens_12sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dimens_200"
        android:layout_height="@dimen/dimens_180"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimens_30"
        android:background="@drawable/orange_border"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_upload"
        android:layout_width="@dimen/dimens_120"
        android:layout_height="@dimen/dimens_40"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimens_10"
        android:background="@drawable/btn_background"
        android:text="Upload Image"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dimens_12sp"
        android:visibility="gone" />
</RelativeLayout>