<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.deliveryjob.DeliveryJobActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView style="@style/DashboardCardViewStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dimens_8"
                    android:paddingEnd="@dimen/dimens_8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="JobID:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <TextView
                        android:id="@+id/tv_job_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/dimens_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Name:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/dimens_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Phone:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/iv_call"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="@dimen/dimens_14sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_call"
                            android:layout_width="@dimen/dimens_20"
                            android:layout_height="@dimen/dimens_20"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_call" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Alt Phone:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_alt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/iv_alt_call"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="@dimen/dimens_14sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_alt_call"
                            android:layout_width="@dimen/dimens_20"
                            android:layout_height="@dimen/dimens_20"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_call" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Email:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/dimens_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Address:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/dimens_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Area:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/dimens_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Status:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/dimens_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Appointment At:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <TextView
                        android:id="@+id/tv_appointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/dimens_14sp" />

                    <TextView
                        android:id="@+id/tv_agent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Agent Assigned:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5">

                        <TextView
                            android:id="@+id/tv_agent_assigned"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/btn_assign_agent"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="@dimen/dimens_14sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_assign_agent"
                            android:layout_width="@dimen/dimens_80"
                            android:layout_height="@dimen/dimens_30"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/btn_background"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/dimens_12sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Payment Type:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <TextView
                        android:id="@+id/tv_payment_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/dimens_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Amount:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimens_12sp" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:layout_marginBottom="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/dimens_14sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_view_images"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:background="@drawable/btn_orange_bg"
                        android:gravity="center"
                        android:paddingStart="@dimen/dimens_15"
                        android:paddingEnd="@dimen/dimens_15"
                        android:text="View Images Uploaded At Delivery"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/dimens_12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

