<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    style="@style/ToolbarStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toolbar_title"
                style="@style/ToolbarTitleStyle"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv_view_notes"
                android:text="DP Delivery" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimens_10"
                android:layout_toStartOf="@id/sp_filter"
                android:fontFamily="@font/montserrat_regular"
                android:text="Search"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_12sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimens_10"
                android:textAlignment="center"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_view_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimens_10"
                android:fontFamily="@font/montserrat_semibold"
                android:text="View Notes"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_10sp"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>