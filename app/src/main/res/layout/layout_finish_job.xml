<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/DashboardCardViewStyle"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_semibold"
                    android:padding="@dimen/dimens_10"
                    android:text="@string/finish_job"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dimens_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_1"
                    android:layout_marginStart="@dimen/dimens_20"
                    android:layout_marginEnd="@dimen/dimens_20"
                    android:background="@color/colorBlackOverlay" />

                <RelativeLayout
                    android:id="@+id/rl_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_20"
                    android:layout_marginTop="@dimen/dimens_10"
                    android:layout_marginEnd="@dimen/dimens_20"
                    android:background="@drawable/bg_note"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="start"
                        android:hint="@string/location"
                        android:textSize="@dimen/dimens_10sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_location"
                        android:layout_width="@dimen/dimens_25"
                        android:layout_height="@dimen/dimens_25"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_location" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/et_happy_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_note"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/dimens_10"
                    android:layout_marginStart="@dimen/dimens_20"
                    android:hint="@string/happy_code"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/dimens_10sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_15"
                    android:layout_marginTop="@dimen/dimens_10"
                    android:layout_marginEnd="@dimen/dimens_15"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_upload_purifier_image"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimens_30"
                        android:layout_marginStart="@dimen/dimens_10"
                        android:layout_weight="1"
                        android:background="@color/colorBlackOverlay"
                        android:drawablePadding="@dimen/dimens_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingStart="@dimen/dimens_5"
                        android:paddingEnd="@dimen/dimens_5"
                        android:text="@string/upload_delivered_image"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/dimens_10sp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_20"
                    android:layout_marginTop="@dimen/dimens_10"
                    android:layout_marginEnd="@dimen/dimens_20"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@drawable/bg_note"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="start"
                        android:hint="@string/pay_amount"
                        android:inputType="number"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dimens_10sp"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/dimens_5">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/sp_payment"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:padding="@dimen/dimens_5"
                            android:spinnerMode="dropdown"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15"
                    android:layout_marginBottom="@dimen/dimens_15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_status_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimens_20"
                        android:layout_marginEnd="@dimen/dimens_20"
                        android:background="@drawable/btn_grey_bg"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/reset"
                        android:textColor="@color/colorWhite" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_status_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimens_10"
                        android:layout_marginEnd="@dimen/dimens_20"
                        android:background="@drawable/btn_orange_bg"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/update"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_close"
        android:layout_width="@dimen/dimens_35"
        android:layout_height="@dimen/dimens_35"
        android:layout_gravity="top|end"
        android:background="@drawable/btn_bg_close"
        android:src="@drawable/ic_error" />

</FrameLayout>