<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Location :"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp" />

        <TextView
            android:id="@+id/locationtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Not Set"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimens_12sp" />

        <Button
            android:id="@+id/btn_location"
            style="@style/finish_buttons_style"
            android:text="Set Location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Happy Code :"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp" />

        <TextView
            android:id="@+id/otptxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Not Set"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimens_12sp" />

        <Button
            android:id="@+id/btn_happy_code"
            style="@style/finish_buttons_style"
            android:text="Happy Code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Purifier Photo :"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp" />

        <TextView
            android:id="@+id/phototxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Not Set"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dimens_12sp" />

        <Button
            android:id="@+id/btn_photo"
            style="@style/finish_buttons_style"
            android:text="Photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Spare Parts :"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp" />

        <TextView
            android:id="@+id/add_parts_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="No Parts"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dimens_12sp" />

        <Button
            android:id="@+id/btn_add_parts"
            style="@style/finish_buttons_style"
            android:text="Add Parts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="TDS Values : "
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp" />

        <TextView
            android:id="@+id/tdsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Not Set"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dimens_12sp" />

        <Button
            android:id="@+id/btn_tds"
            style="@style/finish_buttons_style"
            android:text="TDS" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Amount Collected : "
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="200dp"
            android:layout_height="@dimen/dimens_40"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_note"
            android:gravity="center"
            android:inputType="number" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Type : "
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimens_10">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_mode"
                android:layout_width="200dp"
                android:layout_height="@dimen/dimens_35"
                android:background="@drawable/bg_note"
                android:gravity="center"
                android:padding="@dimen/dimens_5"
                android:spinnerMode="dropdown"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Sync : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_14sp" />

            <TextView
                android:id="@+id/synctxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="Not Synced"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dimens_12sp" />

            <Button
                android:id="@+id/btn_sync"
                style="@style/finish_buttons_style"
                android:text="Sync Now" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_finish_job"
            android:layout_width="@dimen/dimens_150"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimens_20"
            android:layout_marginBottom="@dimen/dimens_20"
            android:background="@drawable/btn_orange_bg"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/finish_job"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimens_14sp" />
    </LinearLayout>


</ScrollView>