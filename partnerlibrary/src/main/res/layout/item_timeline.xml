<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_5">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/stolzl_medium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_step_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_10"
            android:layout_toEndOf="@id/tv_nums"
            android:fontFamily="@font/stolzl_medium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_20"
        android:layout_marginEnd="@dimen/dimens_20"
        android:padding="@dimen/dimens_10"
        android:background="@color/colorWhite"
        android:clipToPadding="false" />

</LinearLayout>